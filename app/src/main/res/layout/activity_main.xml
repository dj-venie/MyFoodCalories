<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_food_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/add"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@id/include_food_name"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8" />

        <include
            android:id="@+id/include_food_name"
            layout="@layout/include_food_info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/include_food_people"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintLeft_toLeftOf="@id/iv_food_image"
            app:layout_constraintRight_toRightOf="@id/iv_food_image"
            app:layout_constraintTop_toBottomOf="@id/iv_food_image" />

        <include
            android:id="@+id/include_food_people"
            layout="@layout/include_food_info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/include_food_calories"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintLeft_toLeftOf="@id/iv_food_image"
            app:layout_constraintRight_toRightOf="@id/iv_food_image"
            app:layout_constraintTop_toBottomOf="@id/include_food_name" />

        <include
            android:id="@+id/include_food_calories"
            layout="@layout/include_food_info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintLeft_toLeftOf="@id/iv_food_image"
            app:layout_constraintRight_toRightOf="@id/iv_food_image"
            app:layout_constraintTop_toBottomOf="@id/include_food_people" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>